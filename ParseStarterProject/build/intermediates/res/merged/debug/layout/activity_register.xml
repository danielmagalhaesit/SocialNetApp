<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_image_background"
    android:gravity="center_vertical|clip_horizontal"
    tools:context="com.parse.starter.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:padding="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    -<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

    <ImageView
        android:background="@drawable/ic_person_add"
        android:layout_height="140dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"/>

    <EditText
        android:background="@drawable/background_edittext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txt_user_reg"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:hint="Username"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="16dp"/>

    <EditText
        android:background="@drawable/background_edittext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txt_email_reg"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_user_reg"
        android:hint="email"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="16dp"/>

    <EditText
        android:background="@drawable/background_edittext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txt_password_reg"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_email_reg"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:ems="10"
        android:inputType="textPassword"/>

    <Button
        android:background="@drawable/background_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btn_register"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_password_reg"
        android:text="Register"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_do_login"
        android:layout_below="@+id/btn_register"
        android:text="Back to log in screen"
        android:layout_marginTop="27dp"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    </RelativeLayout>
</RelativeLayout>

</RelativeLayout>
